{
    "DataWriter": {
        "overwrite": true,
        "write_images": true,
        "write_parameters": true,
        "transform_image": true,
        "transform_peak_time": true,
        "write_parameters": true,
        "write_shower_geometry": true
    },
    "CameraCalibrator": {
        "image_extractor_type": "TwoPassWindowSum"
    },
    "ImageProcessor": {
        "image_cleaner_type": "MARSImageCleaner",
        "MARSImageCleaner": {
            "picture_threshold_pe":  [
                ["type", "*", 10.0],
                ["type", "LST_LST_LSTCam", 6.0],
                ["type", "MST_MST_NectarCam", 6.0],
                ["type", "SST_ASTRI_CHEC", 3.0]
            ],
            "boundary_threshold_pe": [
                ["type", "*", 5.0],
                ["type", "LST_LST_LSTCam", 3.0],
                ["type", "MST_MST_NectarCam", 3.0],
                ["type", "SST_ASTRI_CHEC", 1.5]
            ],
            "min_picture_neighbors":[
                ["type", "*", 1]
            ],
            "keep_isolated_pixels":[
                ["type", "*", true]
            ]
        },
        "ImageQualityQuery": {
            "quality_criteria": [
                ["enough_pixels", "lambda im: np.count_nonzero(im) > 3"]
            ]
        }
    }
}